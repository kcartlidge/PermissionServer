@model SampleSite.Models.RequestModels.ConfirmationRequest

@{
    ViewData["Title"] = "Confirm";
}

<h1>Enter Confirmation Code.</h1>

<p>
    Please enter your email address and the confirmation code you received.
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Confirm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmailAddress" class="control-label"></label>
                <input asp-for="EmailAddress" class="form-control" autofocus />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmationCode" class="control-label"></label>
                <input asp-for="ConfirmationCode" class="form-control" autofocus />
                <span asp-validation-for="ConfirmationCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

