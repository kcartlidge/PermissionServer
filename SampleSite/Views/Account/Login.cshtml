@model SampleSite.Models.RequestModels.LoginRequest

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<p>
    Enter your email address below and we'll send you details to sign straight in.
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-action="SendConfirmation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmailAddress" class="control-label"></label>
                <input asp-for="EmailAddress" class="form-control" autofocus />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

